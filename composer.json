{
    "name": "mistyfiky/shopware-plugin-skeleton",
    "description": "Mistyfiky's Shopware plugin skeleton",
    "type": "shopware-platform-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "mistyfiky"
        }
    ],
    "require": {
        "shopware/core": "~6.7.0",
        "shopware/storefront": "~6.7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.84",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "shopware/platform": "*"
    },
    "extra": {
        "shopware-plugin-class": "Misty\\Plugin\\MistyPlugin",
        "label": {
            "en-GB": "Misty Plugin"
        },
        "description": {
            "en-GB": "Misty Plugin"
        }
    },
    "autoload": {
        "psr-4": {
            "Misty\\Plugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Misty\\Plugin\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        },
        "preferred-install": {
            "shopware/platform": "source"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php post-root-package-install.php",
            "@npm:administration install --package-lock-only",
            "@npm:storefront install --package-lock-only"
        ],
        "post-create-project-cmd": [
            "@composer update --lock"
        ],
        "checks": [
            "@stylelint:check",
            "@eslint:check",
            "@ecs:check",
            "@phpstan:analyse",
            "@jest:run",
            "@phpunit:run"
        ],
        "console": "cd vendor/shopware/platform; bin/console",
        "ecs:check": "php-cs-fixer check --verbose --diff",
        "ecs:fix": "php-cs-fixer fix",
        "eslint:check": [
            "@eslint:check:administration",
            "@eslint:check:storefront"
        ],
        "eslint:check:administration": "@npm:administration run eslint",
        "eslint:check:storefront": "@npm:storefront run eslint",
        "eslint:fix": [
            "@eslint:fix:administration",
            "@eslint:fix:storefront"
        ],
        "eslint:fix:administration": "@npm:administration run eslint:fix",
        "eslint:fix:storefront": "@npm:storefront run eslint:fix",
        "init:db": [
            "@platform init:db",
            "@console plugin:refresh",
            "@console plugin:install --activate MistyPlugin"
        ],
        "init:js": [
            "@npm:administration install",
            "@npm:storefront install",
            "@platform init:js"
        ],
        "init:platform": [
            "cd vendor/shopware/platform && mkdir -p custom/plugins",
            "ln -sfT ../../../../.. vendor/shopware/platform/custom/plugins/MistyPlugin",
            "@platform install"
        ],
        "init:testdb": [
            "@platform init:testdb"
        ],
        "jest:run": [
            "@jest:run:administration",
            "@jest:run:storefront"
        ],
        "jest:run:administration": [
            "@npm:administration run jest"
        ],
        "jest:run:storefront": [
            "@npm:storefront run jest"
        ],
        "jest:watch:administration": [
            "Composer\\Config::disableProcessTimeout",
            "@npm:administration run jest:watch"
        ],
        "jest:watch:storefront": [
            "Composer\\Config::disableProcessTimeout",
            "@npm:storefront run jest:watch"
        ],
        "npm:administration": "npm -C src/Resources/app/administration",
        "npm:storefront": "npm -C src/Resources/app/storefront",
        "phpstan:analyse": "phpstan analyse",
        "phpunit:run": "phpunit",
        "platform": "composer -d vendor/shopware/platform",
        "stylelint:check": [
            "@stylelint:check:administration",
            "@stylelint:check:storefront"
        ],
        "stylelint:check:administration": "@npm:administration run stylelint",
        "stylelint:check:storefront": "@npm:storefront run stylelint",
        "stylelint:fix": [
            "@stylelint:fix:administration",
            "@stylelint:fix:storefront"
        ],
        "stylelint:fix:administration": "@npm:administration run stylelint:fix",
        "stylelint:fix:storefront": "@npm:storefront run stylelint:fix"
    },
    "scripts-aliases": {
        "ecs:check": [
            "ecs"
        ],
        "eslint:check": [
            "eslint"
        ],
        "jest:run": [
            "jest"
        ],
        "phpstan:analyse": [
            "phpstan"
        ],
        "phpunit:run": [
            "phpunit"
        ],
        "stylelint:check": [
            "stylelint"
        ]
    }
}
